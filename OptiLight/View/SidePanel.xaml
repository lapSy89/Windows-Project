                <DataGridTextColumn Binding="{Binding Width}" Header="Width" Width="*"/>
                <DataGridTextColumn Binding="{Binding Height}" Header="Height" Width="*"/>
                <DataGridTextColumn Binding="{Binding Radius.Top}" Header="Vertical" Width="*"/>
                <DataGridTextColumn Binding="{Binding Radius.Left}" Header="Horizontal" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
